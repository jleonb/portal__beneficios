<!DOCTYPE html>
<html>
	<head>
		<title>Portal Beneficios</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="page-container">
			<!-- Navigation Bloc -->
			<div class="bloc l-bloc bgc-white" id="nav-bloc">
				<div class="container">
					<nav class="navbar row">
						<div class="navbar-header">
							<%= link_to root_path do %>
							<%= image_tag "logo.png", :width => "200", :alt => "logo" %>
							<% end %>
							<button id="nav-toggle" type="button" class="ui-navbar-toggle navbar-toggle" data-toggle="collapse" data-target=".navbar-1">
							<span class="sr-only">Menu</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							</button>
						</div>
						<div class="collapse navbar-collapse navbar-1">
							<ul class="site-navigation nav navbar-nav">
  								<% if user_signed_in? %>
                    <li>
                    <%= link_to "#", data: {toggle: "modal", target: "#user_data"} do %>
                          <span class="fa fa-user fa-fw"></span> Mi Credencial
                        </li>
                    <% end %>
                 
                    <li>
                    <%= link_to "#", data: {toggle: "modal", target: "#newsletter"} do %>
                          <span class="fa fa-newspaper-o fa-fw"></span> Mis Noticias
                        </li>
                    <% end %>
                   
                    <li>
                    <%= link_to user_path(current_user) do %>
                          <span class="fa fa-hashtag fa-fw"></span> Mis Beneficios
                        </li>
                    <% end %>
                    <li>
            					<div class="dropdown borde_derecha">
              					<a id="pl-1597" class="dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
              					<i class="fa fa-list-ul fa-fw" aria-hidden="true"></i>
              					 Categor√≠as<span class="caret"></span>
              				</a>
              				<ul class="dropdown-menu" role="menu">
												<li><%= link_to 'Todos', agreements_path %></li>
                				<% @my_categoryes.each do |c| %>
                    		<li>
													<%= link_to "#{c.category}", controller: "agreements", category: "#{c.category}" %></li>
                					<% end %>
              				</ul>
            					</div>
          					</li>
                    <li>
                    <%= link_to destroy_user_session_path, :method => :delete do %>
                          <span class="fa fa-external-link fa-fw"></span> Salir
                        </li>
                    <% end %>
								<% else %>
                    <li>
                    <%= link_to new_user_session_path do %>
                          <span class="fa fa-bookmark  fa-fw"></span> Ingresar
                        </li>
                    <% end %>
								<% end %>
								
							</ul>
						</div>
					</nav>
				</div>
			</div>

			<%= yield %>

			<!-- bloc-5 -->
			<div class="bloc d-bloc bgc-midnight-blue" id="bloc-5">
				<div class="container bloc-xs">
					<div class="row">
						<div class="col-sm-6">
							<%= link_to root_path do %>
							<%= image_tag "logo_footer.png", :class => "img-responsive center-block logo_footer", :alt => "logo" %>
							<% end %>
						</div>
						<div class="col-sm-6 text-center">
							<h5 class="mg-sm">
							  <span class="fa fa-envelope fa-fw"></span> info@portalbeneficios.cl
							</h5>
              <br>
							<h5 class="mg-sm">
							  <span class="fa fa-facebook-square fa-fw"></span> facebook
							</h5>
              <h5 class="mg-sm">
                <span class="fa fa-twitter-square fa-fw"></span> twitter
              </h5>
              <h5 class="mg-sm">
                <span class="fa fa-instagram fa-fw"></span> instagram
              </h5>
						</div>
					</div>
				</div>
			</div>
			<!-- bloc-5 END -->

    </div>
			<!-- </div> Fin page-container -->
  </body>
		<% if user_signed_in? %>
			<%= render :partial => "partials/modals" %>
		<% end %>
		
