<p id="notice"><%= notice %></p>

<h1>Listing Tops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Banner</th>
      <th>Description</th>
      <th>Contact</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tops.each do |top| %>
      <tr>
        <td><%= top.name %></td>
        <td><%= top.banner %></td>
        <td><%= top.description %></td>
        <td><%= top.contact %></td>
        <td><%= top.phone %></td>
        <td><%= top.email %></td>
        <td><%= link_to 'Show', top %></td>
        <td><%= link_to 'Edit', edit_top_path(top) %></td>
        <td><%= link_to 'Destroy', top, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

