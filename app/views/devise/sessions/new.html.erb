<%= render :partial => "partials/menu_sp" %>
<!-- Main container -->
<div class="page-container">
  <!-- bloc-9 -->
  <div class="bloc bgc-white bg-page-background d-bloc bg-repeat" id="bloc-9">
    <div class="container bloc-sm2">
      <div class="row">
        <div class="col-sm-12_2">
          <div class="row">
            <div class="col-sm-3">

            </div>
            <div class="col-sm-6">
              <div class="panel">
                <div class="panel-heading">
                  <%= image_tag "head.jpg", :width => "100%", :alt => "head" %>
                  <!-- <h3 class="mg-clear">
                    Ingresar a Portal Beneficios
                  </h3> -->
                </div>
                <div class="panel-body">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="field">
                        <p>
                          <strong>Correo</strong>
                        </p>
                        <%= f.email_field :email, autofocus: true, :style => "width: 100%" %>
                      </div>
                      <div class="field">
                        <p>
                          <strong>Contrase√±a</strong>
                        </p>
                        <%= f.password_field :password, autocomplete: "off", :style => "width: 100%;" %>
                      </div>
                      <% if devise_mapping.rememberable? -%>
                          <div class="field">
                            <p>
                              <%= f.check_box :remember_me %> <strong> Recordar</strong>
                            </p>
                          </div>
                      <% end -%>
                      <div class="actions">
                        <%= f.submit "INGRESAR", :class => "center-block btn btn-d btn-sq" %>
                      </div>
                  <% end %>
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
            <div class="col-sm-3">

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- bloc-9 END -->
</div>
<!-- Main container END -->